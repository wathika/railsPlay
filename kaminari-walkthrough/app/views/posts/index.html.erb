    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts">
    <%= render @posts %>
    <!-- <% @posts.each do |post| %>
      <%= render 'post', post: post %>
